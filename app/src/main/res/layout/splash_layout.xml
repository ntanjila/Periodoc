<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.periodoc.SplashActivity">


    <ImageView
        android:id="@+id/wave2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFB6C1"
        android:foregroundGravity="center"
        android:src="@drawable/wave2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView

        android:id="@+id/drop"
        android:layout_width="91dp"
        android:layout_height="93dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="310dp"
        android:src="@drawable/drop"
        app:layout_constraintBottom_toBottomOf="@+id/wave2"
        app:layout_constraintEnd_toEndOf="@+id/wave2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/wave2"
        app:layout_constraintTop_toTopOf="@+id/wave2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>